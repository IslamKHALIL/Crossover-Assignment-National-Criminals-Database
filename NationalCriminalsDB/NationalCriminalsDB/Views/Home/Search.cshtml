@model NationalCriminalsDB.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Search";
    var message = ViewBag.Message as string;
    if (string.IsNullOrEmpty(message))
    {
        message = "";
    }
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RequesterEmail)

    <h4>Create a new search request.</h4>
    <hr />

    @Html.Label(message, new { @class = message.ToLower().StartsWith("error") ? "text-danger" : "text-success" })
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Nationality, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nationality, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MinAge, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MinAge, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxAge, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaxAge, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MinWeight, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MinWeight, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxWeight, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaxWeight, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MinHeight, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MinHeight, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxHeight, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaxHeight, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FromDateOfBirth, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromDateOfBirth, new { @class = "form-control", type = "date" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ToDateOfBirth, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ToDateOfBirth, new { @class = "form-control", type = "date" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Sex, new { @class = "col-md-2 control-label" })
        @{
            var names = Enum.GetNames(typeof(NationalCriminalsDB.Service.Models.Sex));
            for (int i = 0; i < names.Length; i++)
            {
                <div class="col-md-2">
                    @Html.RadioButtonFor(m => m.Sex, names[i])
                    @names[i]
                </div>
            }
        }
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxResultCount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaxResultCount, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
            }